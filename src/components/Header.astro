---
// Header component with navigation
---

<header class="border-b border-[var(--color-border)] bg-[var(--color-bg-primary)]">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <span class="text-xl font-bold text-[var(--color-text-primary)]">SYNDICATE</span>
      </a>

      <!-- Navigation -->
      <nav class="hidden sm:flex items-center gap-6">
        <a
          href="/"
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors"
        >
          Home
        </a>
        <a
          href="/tag/news"
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors"
        >
          News
        </a>
        <a
          href="/tag/opinion"
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors"
        >
          Opinion
        </a>
      </nav>

      <!-- Auth / Subscribe -->
      <div class="flex items-center gap-4">
        <a
          href="/auth/signin"
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors hidden sm:block"
        >
          Sign in
        </a>
        <a
          href="/auth/signup"
          class="text-sm font-medium px-4 py-2 rounded-md bg-[var(--color-accent)] text-white hover:bg-[var(--color-accent-hover)] transition-colors"
        >
          Subscribe
        </a>
      </div>
    </div>
  </div>
</header>
