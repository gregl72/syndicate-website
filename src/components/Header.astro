---
import { getCityMapForNav } from '../lib/citymap';

// Fetch city map data at build time
const stateGroups = await getCityMapForNav();
---

<header class="border-b border-[var(--color-border)] bg-[var(--color-bg-primary)]">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top row: Logo + Actions -->
    <div class="flex items-center justify-between h-14">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <span class="text-xl font-bold text-[var(--color-text-primary)]">citizen journal</span>
      </a>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <a
          href="/get-the-app"
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors"
        >
          get the app
        </a>
        <a
          href="/subscribe"
          class="text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors"
        >
          subscribe
        </a>
      </div>
    </div>

    <!-- Navigation row -->
    <nav class="flex items-center gap-1 py-2 flex-wrap">
      <!-- Dynamic state dropdowns -->
      {stateGroups.map((group) => (
        <div class="nav-dropdown relative">
          <button class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors px-2 py-1 whitespace-nowrap flex items-center gap-1">
            {group.state}
            <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="dropdown-menu absolute left-0 top-full pt-1 bg-[var(--color-bg-secondary)] border border-[var(--color-border)] rounded-lg shadow-lg py-1 min-w-[200px] z-50">
            {group.cities.map((city) => (
              <a
                href={`/tag/${city.tag}`}
                class="block px-3 py-2 text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-tertiary)] transition-colors"
              >
                {city.city}
              </a>
            ))}
          </div>
        </div>
      ))}

      <span class="text-[var(--color-border)] px-1">|</span>
      <a href="/about" class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors px-2 py-1 whitespace-nowrap">about</a>
      <a href="/contact" class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors px-2 py-1 whitespace-nowrap">contact us</a>
    </nav>
  </div>
</header>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Dropdown styles */
  .nav-dropdown {
    padding-bottom: 8px;
    margin-bottom: -8px;
  }

  .dropdown-menu {
    display: none;
    animation: fadeIn 0.15s ease-out;
  }

  .nav-dropdown:hover .dropdown-menu,
  .nav-dropdown:focus-within .dropdown-menu {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
