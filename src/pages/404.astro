---
import Base from '../layouts/Base.astro';
---

<Base title="Page Not Found - citizen journal">
  <div class="min-h-[calc(100vh-200px)] flex items-center justify-center px-4 py-12">
    <div class="text-center">
      <p class="text-6xl font-bold text-[var(--color-accent)] mb-4">404</p>
      <h1 class="text-2xl font-bold text-[var(--color-text-primary)] mb-4">
        Page not found
      </h1>
      <p class="text-[var(--color-text-muted)] mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-colors"
      >
        Go home
      </a>
    </div>
  </div>
</Base>
